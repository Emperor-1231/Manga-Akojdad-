-- إنشاء جدول extension_repos --
CREATE TABLE extension_repos (
    base_url TEXT NOT NULL PRIMARY KEY,  -- رابط القاعدة (أو رابط المصدر)
    name TEXT NOT NULL,  -- اسم المستودع
    short_name TEXT,  -- الاسم المختصر للمستودع
    website TEXT NOT NULL,  -- الموقع الإلكتروني للمستودع
    signing_key_fingerprint TEXT UNIQUE NOT NULL  -- بصمة مفتاح التوقيع للمستودع
);