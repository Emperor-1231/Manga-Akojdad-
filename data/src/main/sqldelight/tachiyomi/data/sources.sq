CREATE TABLE sources(
    _id INTEGER NOT NULL PRIMARY KEY, -- معرّف المصدر
    lang TEXT NOT NULL, -- اللغة الخاصة بالمصدر
    name TEXT NOT NULL -- اسم المصدر
);

-- استعلام لجلب جميع المصادر
findAll:
SELECT *
FROM sources;

-- استعلام لجلب مصدر حسب معرّفه
findOne:
SELECT *
FROM sources
WHERE _id = :id;

-- استعلام لإدخال أو تحديث مصدر
upsert:
INSERT INTO sources(_id, lang, name)
VALUES (:id, :lang, :name)
ON CONFLICT(_id)
DO UPDATE
SET
    lang = :lang,
    name = :name
WHERE _id = :id;